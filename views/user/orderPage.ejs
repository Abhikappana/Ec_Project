<%- include('./partials/navbar.ejs') %>
<link rel="stylesheet" href="https://unpkg.com/bootstrap@5.3.2/dist/css/bootstrap.min.css">
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.2/font/bootstrap-icons.min.css">
<link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">

<section class="bg-light py-3 py-md-5 py-xl-8">
    <div class="container mt-5">
        <div class="row">
            <div class="col-12 col-lg-4 col-xl-3">
                <div class="row gy-4">
                    <div class="col-12">
                        <div class="card widget-card border-light shadow-sm">
                            <div class="card-body d-flex align-items-center">
                                <div class="text-center">
                                    <% if (!userProfile.image) { %>
                                        <img src="/images/NoImage.png" class="img-fluid rounded-circle" style="width: 80px; height: 80px;" alt="Profile">
                                    <% } else { %>
                                        <img src="/images/<%= userProfile.image %>" class="img-fluid rounded-circle" style="width: 80px; height: 80px;" alt="Profile">
                                    <% } %>
                                </div>
                                <div class="text-center ml-3">
                                    <p>Hello,</p>
                                    <h5 class="text-center"><%= userProfile.Username %></h5>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-12">
                        <div class="card widget-card border-light shadow-sm">
                            <div class="card-body darktheme">
                                <ul class="nav flex-column">
                                    <li class="nav-item">
                                        <a class="nav-link" href="/userDetails">Profile</a>
                                    </li>
                                    <li class="nav-item">
                                        <a class="nav-link" href="/address">Address</a>
                                    </li>
                                    <li class="nav-item">
                                        <a class="nav-link" href="/Order">Order</a>
                                    </li>
                                    <li class="nav-item">
                                        <a class="nav-link" href="#">Settings</a>
                                    </li>
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-12 col-lg-8 col-xl-9">
                <div class="card widget-card border-light shadow-sm">
                    <div class="card-body p-4">
                        <div class="mb-5">
                            <h4>Orders</h4>
                        </div>
                        <div class="container">
                            <div class="row justify-content-center">
                                <div class="col-md-12">
                                   
                                    <div id="orderContainer">
                                        <% if (!orders || orders.length === 0) { %>
                                            <div class="row justify-content-center mt-3 mb-5">
                                                <div class="col-6 text-center">
                                                    <a href="/" class="btn btn-primary">Go to Shop</a>
                                                </div>
                                            </div>
                                        <% } else { %>
                                            <div class="card">
                                                <div class="table-responsive">
                                                    <table class="table table-hover order_item_list c_table theme-color mb-0">
                                                        <thead>
                                                            <tr style="text-align:center;">
                                                                <th>Order ID</th>
                                                                <th>Products</th>
                                                                <th>Total Value</th>
                                                                <th>Status</th>
                                                                <th>Date</th>
                                                                <th>Action</th>
                                                            </tr>
                                                        </thead>
                                                        <tbody>
                                                            <% for (let i = 0; i < orders.length; i++) { %>
                                                                <tr style="text-align:center;">
                                                                    <td><%= orders[i].orderID %></td>
                                                                    <td>
                                                                        <% orders[i].products.forEach(product => { %>
                                                                            <p><%= product.name %> (x<%= product.quantity %>)</p>
                                                                        <% }); %>
                                                                    </td>
                                                                    <td>â‚¹<%= orders[i].totalOrderValue %></td>
                                                                    <td><%= orders[i].status %></td>
                                                                    <td><%= new Date(orders[i].date).toLocaleDateString() %></td>
                                                                    <td>
                                                                        <a href="/orderDetails/<%= orders[i]._id %>" class="btn btn-outline-secondary">View</a>
                                                                        <% if (orders[i].status !== 'Cancelled') { %>
                                                                            <a href="/cancelOrder/<%= orders[i]._id %>" class="btn btn-outline-danger">Cancel</a>
                                                                        <% } %>
                                                                    </td>
                                                                </tr>
                                                            <% } %>
                                                        </tbody>
                                                    </table>
                                                </div>
                                            </div>
                                        <% } %>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <!-- Save Changes Button -->
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<%- include('./partials/footer.ejs') %>
<script src="https://unpkg.com/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
<script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.3/dist/umd/popper.min.js"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
