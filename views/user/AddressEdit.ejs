<script>
document.addEventListener('DOMContentLoaded', () => {
    const nameField = document.getElementById('inputName');
    const streetAddressField = document.getElementById('inputStreetAddress');
    const cityField = document.getElementById('inputCity');
    const stateField = document.getElementById('inputState');
    const postalCodeField = document.getElementById('inputPostalCode');
    const countryField = document.getElementById('inputCountry');

    const nameError = document.getElementById('nameError');
    const streetAddressError = document.getElementById('streetAddressError');
    const cityError = document.getElementById('cityError');
    const stateError = document.getElementById('stateError');
    const postalCodeError = document.getElementById('postalCodeError');
    const countryError = document.getElementById('countryError');

    function validateName() {
        const name = nameField.value.trim();
        if (name === '') {
            nameError.textContent = 'Name is required.';
            return false;
        } else {
            nameError.textContent = '';
            return true;
        }
    }

    function validateStreetAddress() {
        const streetAddress = streetAddressField.value.trim();
        if (streetAddress === '') {
            streetAddressError.textContent = 'Street Address is required.';
            return false;
        } else {
            streetAddressError.textContent = '';
            return true;
        }
    }

    function validateCity() {
        const city = cityField.value.trim();
        if (city === '') {
            cityError.textContent = 'City is required.';
            return false;
        } else {
            cityError.textContent = '';
            return true;
        }
    }

    function validateState() {
        const state = stateField.value.trim();
        if (state === '') {
            stateError.textContent = 'State is required.';
            return false;
        } else {
            stateError.textContent = '';
            return true;
        }
    }

    function validatePostalCode() {
        const postalCode = postalCodeField.value.trim();
        if (postalCode === '') {
            postalCodeError.textContent = 'Postal Code is required.';
            return false;
        } else {
            postalCodeError.textContent = '';
            return true;
        }
    }

    function validateCountry() {
        const country = countryField.value.trim();
        if (country === '') {
            countryError.textContent = 'Country is required.';
            return false;
        } else {
            countryError.textContent = '';
            return true;
        }
    }

    nameField.addEventListener('blur', validateName);
    streetAddressField.addEventListener('blur', validateStreetAddress);
    cityField.addEventListener('blur', validateCity);
    stateField.addEventListener('blur', validateState);
    postalCodeField.addEventListener('blur', validatePostalCode);
    countryField.addEventListener('blur', validateCountry);

    const submitButton = document.querySelector('form button[type="submit"]');
    submitButton.addEventListener('click', (event) => {
        if (!validateName() || !validateStreetAddress() || !validateCity() || !validateState() || !validatePostalCode() || !validateCountry()) {
            event.preventDefault(); // Prevent form submission if validation fails
        }
    });
});
</script>


