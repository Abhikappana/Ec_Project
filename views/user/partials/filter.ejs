<!-- Filter -->
<div class="panel-filter w-full p-t-10 dis-none" id="filterPanel">
    <div class="wrap-filter flex-w bg6 w-full p-lr-40 p-t-27 p-lr-15-sm">
        <div class="filter-col1 p-r-15 p-b-27">
            <div class="mtext-102 cl2 p-b-15">
                Sort By
            </div>
            <ul>
                <li class="p-b-6">
                    <a href="/product?<%= new URLSearchParams({sort: 'default', direction: 'asc', category: categoryFilter, minPrice: minPrice, maxPrice: maxPrice}).toString() %>" class="filter-link stext-106 trans-04">
                        Default
                    </a>
                </li>
                <li class="p-b-6">
                    <a href="/product?<%= new URLSearchParams({sort: 'rate', direction: 'asc', category: categoryFilter, minPrice: minPrice, maxPrice: maxPrice}).toString() %>" class="filter-link stext-106 trans-04">
                        Price: Low to High
                    </a>
                </li>
                <li class="p-b-6">
                    <a href="/product?<%= new URLSearchParams({sort: 'rate', direction: 'desc', category: categoryFilter, minPrice: minPrice, maxPrice: maxPrice}).toString() %>" class="filter-link stext-106 trans-04">
                        Price: High to Low
                    </a>
                </li>
            </ul>
        </div>

        <div class="filter-col2 p-r-15 p-b-27">
            <div class="mtext-102 cl2 p-b-15">
                Price
            </div>

            <ul>
                <li class="p-b-6">
                    <a href="/product?<%= new URLSearchParams({sort: sortOption, direction: sortDirection, category: categoryFilter, minPrice: 0, maxPrice: Infinity}).toString() %>" class="filter-link stext-106 trans-04 filter-link-active">
                        All
                    </a>
                </li>

                <li class="p-b-6">
                    <a href="/product?<%= new URLSearchParams({sort: sortOption, direction: sortDirection, category: categoryFilter, minPrice: 200, maxPrice: 500}).toString() %>" class="filter-link stext-106 trans-04">
                        ₹200.00 - ₹500.00
                    </a>
                </li>

                <li class="p-b-6">
                    <a href="/product?<%= new URLSearchParams({sort: sortOption, direction: sortDirection, category: categoryFilter, minPrice: 500, maxPrice: 1000}).toString() %>" class="filter-link stext-106 trans-04">
                        ₹500.00 - ₹1000.00
                    </a>
                </li>

                <li class="p-b-6">
                    <a href="/product?<%= new URLSearchParams({sort: sortOption, direction: sortDirection, category: categoryFilter, minPrice: 1000, maxPrice: 5000}).toString() %>" class="filter-link stext-106 trans-04">
                        ₹1000.00 - ₹5000.00
                    </a>
                </li>

                <li class="p-b-6">
                    <a href="/product?<%= new URLSearchParams({sort: sortOption, direction: sortDirection, category: categoryFilter, minPrice: 5000, maxPrice: Infinity}).toString() %>" class="filter-link stext-106 trans-04">
                        ₹5000.00+
                    </a>
                </li>
            </ul>
        </div>
    </div>
</div>
