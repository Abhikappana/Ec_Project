
<%- include('./partials/navbar.ejs') %>
    <style>
        body {
            background-color: #f8f9fa;
            font-family: Poppins-regular;
        }

        .container {
            max-width: 100%;
            margin: 0 auto;
            justify-content: center;
            align-items: center;
        }

        .card {
            margin-bottom: 20px;
            border: none;
        }

        .card-header {
            color: #000000;
        }

        .card-body {
            background-color: #fff;
        }

        .form-label {
            font-weight: bold;
        }

        .btn {
            margin-right: 10px;
            background-color: #000000;
            border: 50px;
        }

        .Setting {
            display: flex;
            align-items: center;
        }

        /* Additional styles for login form */
        .login {
            text-align: center;
            max-width: 400px;
            margin: 100px auto;
            padding: 20px;
            border-radius: 8px;
            background-color: #ffffff;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        }

        .form {
            display: flex;
            flex-direction: column;
            align-items: center;
        }

        h1 {
            font-size: 28px;
            margin-bottom: 20px;
            color: #000000;
        }

        label {
            font-size: 16px;
            margin-bottom: 8px;
            color: #000000;
        }

        .inputForm {
            display: flex;
            align-items: center;
            margin-bottom: 20px;
            border-bottom: 1px solid #000000;
            padding-bottom: 8px;
        }

        .input {
            flex: 1;
            border: none;
            background-color: transparent;
            outline: none;
            font-size: 16px;
            color: #000000;
        }

        .input svg {
            margin-right: 10px;
            fill: #000000;
        }

        .eye svg {
            cursor: pointer;
        }

        .flex-row {
            display: flex;
            align-items: center;
            justify-content: space-between;
            margin-bottom: 20px;
        }

        .button-submit {
            padding: 10px 20px;
            background-color: #000000;
            border: none;
            color: #ffffff;
            font-size: 16px;
            cursor: pointer;
        }

        .p {
            font-size: 14px;
            color: #000000;
            margin-bottom: 10px;
        }

        .p.line {
            margin-top: 20px;
            margin-bottom: 20px;
            border-bottom: 1px solid #000000;
            padding-bottom: 10px;
        }

        .span a {
            color: #000000;
            text-decoration: none;
        }

        .flex-row button {
            padding: 10px;
            border-radius: 4px;
            cursor: pointer;
        }

        .google {
            background-color: #fbbB00;
            color: #ffffff;
        }

        .apple {
            background-color: #000000;
            color: #ffffff;
        }
    </style>

<body>
    <div class="container mt-5">
        <div class="row">
            <!-- Profile Information -->
            <div class="col-md-6">
                <div class="card mb-4">
                    <div class="card-header">Profile Information</div>
                    <div class="card-body">
                        <form action="/update-profile" method="post">
                            <div class="mb-3">
                                <label for="username" class="form-label">Username</label>
                                <input type="text" class="form-control" name="Username" value="<%= Username %>">
                            </div>
                            <div class="mb-3">
                                <label for="email" class="form-label">Email</label>
                                <input type="email" class="form-control" name="email" value="<%= email %>">
                            </div>
                            <!-- Add more fields as needed -->
                            <button type="submit" class="btn btn-primary">Update Profile</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
        <!-- Address Book -->
        <div class="row">
            <div class="col-md-6">
                <div class="card mb-4">
                    <div class="card-header">Address Book</div>
                    <div class="card-body">
                        <form action="/add-address" method="post">
                            <div class="mb-3">
                                <label for="address" class="form-label">Address</label>
                                <input type="text" class="form-control" name="address" placeholder="Enter Address">
                            </div>
                            <!-- Add more address fields as needed -->
                            <button type="submit" class="btn btn-primary">Add Address</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
        <!-- Account Settings -->
        <div class="row">
            <div class="col-md-6">
                <div class="card mb-4">
                    <div class="card-header">Account Settings</div>
                    <div class="card-body Setting">
                        <form action="/change-password" method="post">
                            <button type="submit" class="btn btn-primary">Change Password</button>
                        </form>
                        <form action="/delete-account" method="post">
                            <button type="submit" class="btn btn-danger mt-3">Delete Account</button>
                        </form>
                        <form action="/logout">
                            <button type="submit" class="btn btn-secondary mt-3">Logout</button>
                        </form>
                        <!-- Add more settings options as needed -->
                    </div>
                </div>
            </div>
        </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>

<%- include('./partials/footer.ejs') %>