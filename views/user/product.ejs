
<%- include('./partials/navbar.ejs') %>
<body class="animsition">	
	<!-- Product -->
	<div class="bg0 m-t-80 p-b-140">
	
		<div class="container">
			<div class="flex-w flex-sb-m p-b-52">
				<div class="flex-w flex-l-m filter-tope-group m-tb-10">
					<button class="stext-106 cl6 hov1 bor3 trans-04 m-r-32 m-tb-5 how-active1" data-filter="*">
						All Products
					</button>

					<% for(let a of category) { %>
					<button class="stext-106 cl6 hov1 bor3 trans-04 m-r-32 m-tb-5" data-filter="<%= a.category%>">
						<%= a.category%>
					</button>
					<% } %>
					
				</div>

				<div class="flex-w flex-c-m m-tb-10">
					<div class="flex-c-m stext-106 cl6 size-104 bor4 pointer hov-btn3 trans-04 m-r-8 m-tb-4 js-show-filter">
						<i class="icon-filter cl2 m-r-6 fs-15 trans-04 zmdi zmdi-filter-list"></i>
						<i class="icon-close-filter cl2 m-r-6 fs-15 trans-04 zmdi zmdi-close dis-none"></i>
						 Filter
					</div>

		
				</div>
				
				<!-- Search product -->
				
				<!-- Filter -->
				<%- include('./partials/filter.ejs') %>
			</div>

			<div class="row isotope-grid">
				<% for(let i = 0; i < products.length; i++) { %>
				<div class="col-sm-6 col-md-4 col-lg-3 p-b-35 isotope-item" data-category="<%= category.category%>">
					<!-- Products-->
					<div class="block2">
						<div class="block2-pic hov-img0">
							<img src="/images/<%= products[i].image[0] %>" alt="IMG-PRODUCT">

							<a href="/product-detail/<%= products[i]._id %>" class="block2-btn flex-c-m stext-103 cl2 size-102 bg0 bor2 hov-btn1 p-lr-15 trans-04">
								Quick View
							</a>
						</div>

						<div class="block2-txt flex-w flex-t p-t-14">
							<div class="block2-txt-child1 flex-col-l ">
								<a href="/product-detail/<%= products[i]._id %>" class="stext-104 cl4 hov-cl1 trans-04 js-name-b2 p-b-6">
									<%= products[i].name %>
								</a>

								<span class="stext-105 cl3">
									â‚¹<%= products[i].rate %>
								</span>
							</div>

							<div class="block2-txt-child2 flex-r p-t-3">

								<button class="btn-addwish-b2 dis-block pos-relative add-from-wishlist"
									onclick="addToWishlist('<%= products[i]._id %>')"
									data-product-id="<%= products[i]._id %>" <% if (products[i].wishlist) { %>
									style="display: none;" <% } %>>
										<img class="" src="images/icons/icon-heart-01.png" alt="ICON">
								</button>

								<button class="btn-addwish-b2 dis-block pos-relative remove-to-wishlist"
									onclick="removeFromWishlist('<%= products[i]._id %>')"
									data-product-id="<%= products[i]._id %>" <% if (!products[i].wishlist) { %>
									style="display: none;" <% } %>>
										<img class=" " src="images/icons/icon-heart-02.png" alt="ICON">
								</button>

							</div>
						</div>
					</div>
				</div>	
				<% } %>
			</div>

			<!-- Load more -->
			<div class="flex-c-m flex-w w-full p-t-45">
				<a href="#" class="flex-c-m stext-101 cl5 size-103 bg2 bor1 hov-btn1 p-lr-15 trans-04">
					Load More
				</a>
			</div>
		</div>
	</div>
		

	<!-- Footer -->
	<%- include('./partials/footer.ejs') %>


	<!-- Back to top -->
	<div class="btn-back-to-top" id="myBtn">
		<span class="symbol-btn-back-to-top">
			<i class="zmdi zmdi-chevron-up"></i>
		</span>
	</div>


</body>
