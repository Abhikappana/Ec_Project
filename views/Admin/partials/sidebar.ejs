<script>
    document.addEventListener("DOMContentLoaded", function() {
      // Get the current URL or page path
      var currentUrl = window.location.pathname;

      // Get all menu items including submenus
      var menuItems = document.querySelectorAll('.list li');

      // Loop through each menu item and check if it matches the current URL
      menuItems.forEach(function(item) {
        var link = item.querySelector('a');
        var submenuLinks = item.querySelectorAll('.ml-menu li a');
        
        if (link && link.getAttribute('href') === currentUrl) {
          item.classList.add('active'); // Add 'active' class to parent li
        }

        // Check submenu links
        submenuLinks.forEach(function(subLink) {
          if (subLink.getAttribute('href') === currentUrl) {
            item.classList.add('active'); // Add 'active' class to parent li
          }
        });
      });
    });
  </script>
 